.tab {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  border-bottom: 2rpx #f5f5f5 solid;
  background-color: #fff;
  box-sizing: border-box;
}
.tab .tab-scroll {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  overflow: hidden;
  box-sizing: border-box;
}
.tab .tab-scroll .tab-scroll-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-flex-wrap: nowrap;
          flex-wrap: nowrap;
  height: 90rpx;
  box-sizing: border-box;
}
.tab .tab-scroll .tab-scroll-box .tab-scroll-box-item {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  padding: 0 20rpx;
  color: #333;
  font-size: 28rpx;
}
.tab .tab-scroll .tab-scroll-box .tab-scroll-box-item.active {
  color: #F07373;
}
.tab .tab-icons {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 90rpx;
}
.tab .tab-icons::after {
  content: '';
  position: absolute;
  top: 24rpx;
  bottom: 24rpx;
  left: 0;
  width: 2rpx;
  background-color: #ddd;
}

