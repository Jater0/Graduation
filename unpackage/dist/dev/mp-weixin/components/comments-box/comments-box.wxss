.comments-box {
  margin: 30rpx 0;
}
.comments-box .comments-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.comments-box .comments-header .comments-header-avatar {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.comments-box .comments-header .comments-header-avatar image {
  width: 100%;
  height: 100%;
}
.comments-box .comments-header .comments-header-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding-left: 30rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1;
}
.comments-box .comments-header .comments-header-info .info-title {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}
.comments-box .comments-header .comments-header-info .info-title .reply-text {
  margin: 0 20rpx;
  font-weight: bold;
  color: #000;
}
.comments-box .comments-content {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #000;
}
.comments-box .comments-content .comments-info {
  margin-top: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.comments-box .comments-content .comments-info .comments-info-button {
  padding: 4rpx 20rpx;
  font-size: 24rpx;
  color: #999;
  border-radius: 40rpx;
  border: 1px #ccc solid;
}
.comments-box .comments-content .comments-reply {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 30rpx 0;
  padding: 0 20rpx;
  border: 1px #eee solid;
}

