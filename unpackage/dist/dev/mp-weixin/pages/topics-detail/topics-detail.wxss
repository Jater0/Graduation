.topic .topic-area {
  background-color: #FFCCCC;
  padding-bottom: 30rpx;
}
.topic .topic-area .topic-content-title {
  padding: 0 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.topic .topic-area .topic-content-cover {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 20rpx;
  width: 100%;
  height: 140rpx;
}
.topic .topic-area .topic-content-cover .topic-content-cover-item {
  margin-left: 20rpx;
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}
.topic .topic-area .topic-content-cover .topic-content-cover-item:first-child {
  margin-left: 10rpx;
}
.topic .topic-area .topic-content-cover .topic-content-cover-item:last-child {
  margin-right: 10rpx;
}
.topic .topic-area .topic-content-cover .topic-content-cover-item image {
  width: 100%;
  height: 100%;
}
