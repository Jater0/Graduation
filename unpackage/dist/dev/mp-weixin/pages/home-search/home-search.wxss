page {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #f5f5f5;
}
.home {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.home .label-box {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.home .label-box .label-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 30rpx;
  border-bottom: 1px #f5f5f5 solid;
}
.home .label-box .label-header .label-title {
  color: #F07373;
}
.home .label-box .label-header .label-title.bold {
  font-weight: bold;
}
.home .label-box .label-header .label-clear {
  color: #30b33a;
  font-weight: bold;
}
.home .label-box .label-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  padding: 30rpx;
  padding-top: 0;
}
.home .label-box .label-content .label-content-item {
  padding: 4rpx 20rpx;
  margin-top: 24rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  border: 1px #666 solid;
  font-size: 28rpx;
  color: #666;
}
.home .label-box .label-recommend {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-bottom: 30rpx;
  padding-top: 0;
}
.home .label-box .label-recommend .label-recommend-item {
  padding-top: 20rpx;
  overflow: hidden;
  font-size: 28rpx;
  color: #666;
  width: 49%;
}
.home .label-box .label-recommend .label-recommend-item text {
  color: #dbf338;
  font-size: 30rpx;
  font-weight: bold;
  height: 100%;
}
.home .label-box .label-recommend .posright {
  border-left: 1px #eee solid;
}
.home .no-data {
  height: 200rpx;
  line-height: 200rpx;
  width: 100%;
  text-align: center;
  color: #666;
  font-size: 24rpx;
}

